<% if user_signed_in? %>

  <% unless @recipe.like_user(current_user.id).blank? %>
    <%= link_to recipe_like_path(post_id: @recipe.id, id: @recipe.likes[0].id), method: :delete, remote: true do %>
      <div class="vertical_like">
        <%= image_tag "icon_red_heart.png", size: '40x40' %>
      </div>
    <% end %>
  <% else %>
    <%= link_to recipe_likes_path(@recipe.id), method: :post, remote: true do %>
      <div class="vertical_like">
        <%= image_tag "icon_heart.png", size: '40x40' %>
      </div>
    <% end %>
  <% end %>
<% end %>